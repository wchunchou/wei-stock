<h3>My Friend List</h3>
<h5>Search friends</h5>
<%= form_tag( search_friend_path, remote: true, method: :get) do %>
<div class="form-group row">
    <div class="col-sm-9 pr-0">
        <%= text_field_tag :user, params[:user], placeholder: "name or email", autofocus: true, class:'form-control form-control-large' %>
    </div>
    <div class="col-sm-3">
        <%= button_tag type: :submit, class: 'btn btn-primary btn-large' do%>
        <%= fa_icon 'search', text: "Search" %>
        <% end %>
    </div>
</div>
<% end %>

<div id="result">
    <%= render 'users/friend_result' %>
</div>

<hr>
<%= render'list' %>

