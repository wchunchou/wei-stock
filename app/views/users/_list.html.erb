
<h6>My Tracked People</h6>
<% if !@friends.empty? %>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Name</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  
    <% @friends.each do |user|  %>
    <tr>
      <td scope="row"><%= link_to user.email, user_path(user) %></td>
      <td><%= user.full_name %></td>
      <td><%= link_to 'unfollow', friendship_path(user), method: :delete, data:{confirm: 'Are you sure?'}, class:'btn btn-sm btn-outline-primary' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>