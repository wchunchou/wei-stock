<h3>My Portfolio</h3>
<hr>
<h5>Search Stocks</h5>
<%= form_tag( search_stock_path, remote: true, method: :get) do %>
<div class="form-group row">
    <div class="col-sm-9 pr-0">
        <%= text_field_tag :stock, params[:stock], placeholder: "stock ticker symbol", autofocus: true, class:'form-control form-control-large' %>
    </div>
    <div class="col-sm-3">
        <%= button_tag type: :submit, class: 'btn btn-primary btn-large' do%>
        <%= fa_icon 'search', text: "Search" %>
        <% end %>
    </div>
</div>
<% end %>

<div id="result">
    <%= render 'users/result' %>
</div>

<hr>

<%= render'stocks/list' %>
